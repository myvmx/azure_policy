{
  "properties": {
    "displayName": "Check if VM Boot Diagnostics Profile is enabled",
    "policyType": "Custom",
    "mode": "All",
    "parameters": {},
    "policyRule": {
      "if": {
        "field": "Microsoft.Compute/virtualMachines/diagnosticsProfile.bootDiagnostics.enabled",
        "equals": "false"
      },
      "then": {
        "effect": "audit"
      }
    }
  }
}
